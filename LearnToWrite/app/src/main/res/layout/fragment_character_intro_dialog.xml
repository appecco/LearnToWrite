<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appecco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/characterIntroTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/welcome_to_game"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/introSectionsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/alphafriendImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Alphafriend Image"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/shapes_icon" />

        <com.appecco.learntowrite.view.DrawingView
            android:id="@+id/hintDrawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            appecco:mode="hint"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/cancelButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            android:contentDescription="@string/cancel_button"/>

        <ImageButton
            android:id="@+id/startLevelButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="Start the Level"
            android:scaleType="fitCenter"
            android:src="@drawable/forward" />

    </LinearLayout>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.appecco.learntowrite.MainActivity">

    <LinearLayout
        android:id="@+id/linlayTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!--<TextView-->
            <!--android:id="@+id/txtTitle"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:fontFamily="sans-serif"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:text="Learn To Write"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:textSize="45sp"-->
            <!--android:textStyle="italic" />-->

        <ImageView
            android:id="@+id/imgTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="40sp"
            android:paddingEnd="40sp"
            android:src="@drawable/title"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlaySpace1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlayButtons1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:orientation="horizontal" >

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnNewGameCursive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@drawable/play_button"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlaySpace2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

    </LinearLayout>

   <LinearLayout
        android:id="@+id/linlayButtons3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

       <ImageButton
           android:id="@+id/btnSettings"
           android:layout_width="38sp"
           android:layout_height="38sp"
           android:background="@drawable/settings" />

       <ImageButton
           android:id="@+id/btnRewards"
           android:layout_width="38sp"
           android:layout_height="38sp"
           android:background="@drawable/settings" />

   </LinearLayout>

</LinearLayout>

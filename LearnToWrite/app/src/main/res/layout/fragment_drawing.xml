            <!--<Button-->
                <!--android:id="@+id/btnSave"-->
                <!--style="?android:attr/buttonStyleSmall"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_toEndOf="@+id/space7"-->
                <!--android:text="Save" />-->

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62sp"
            android:layout_alignParentBottom="true">

            <Space
                android:id="@+id/space3"
                android:layout_width="15sp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>

            <ImageButton
                android:id="@+id/btnSwapBackground"
                android:contentDescription="@string/retry_button"
                android:layout_width="46sp"
                android:layout_height="46sp"
                android:layout_toStartOf="@+id/space3"
                android:background="@color/colorBlue"
                android:scaleType="fitCenter"
                android:src="@drawable/landscape_reset" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/animated_star"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/star"
        android:visibility="invisible" />


</RelativeLayout>

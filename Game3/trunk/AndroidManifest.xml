<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mp.androidGames.game3"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mp.androidGames.game3.MainMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mp.androidGames.game3.ProfileListActivity"
            android:label="@string/title_profile_list" >
        </activity>
        <activity
            android:name="mp.androidGames.game3.ProfileDetailActivity"
            android:label="@string/title_profile_detail"
            android:parentActivityName="mp.androidGames.game3.ProfileListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mp.androidGames.game3.ProfileListActivity" />
        </activity>
    </application>

</manifest>
